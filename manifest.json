{
    "name": "Vinyl Player",
    "short_name": "Vinyl Player",
    "description": "Spin your music seamlessly with our web-based vinyl player app. Play local MP3/FLAC files, direct audio URLs, or YouTube links. Enjoy retro vibes with modern streamingâ€”no downloads needed!",
    "start_url": "/",
    "id": "/",
    "display": "standalone",
    "background_color": "#ffffff",
    "theme_color": "#000000",
    "orientation": "any",
    "scope": "/",
    "dir": "ltr",
    "icons": [
        {
            "src": "favicon.png",
            "sizes": "512x512",
            "type": "image/png"
        },
        {
            "src": "favicon.svg",
            "sizes": "any",
            "type": "image/svg+xml"
        }
    ],
    "screenshots": [
        {
            "src": "images/screenshot-desktop.png",
            "sizes": "1919x917",
            "type": "image/png",
            "form_factor": "wide"
        },
        {
            "src": "images/screenshot-mobile.png",
            "sizes": "1080x1920",
            "type": "image/png",
            "form_factor": "narrow"
        },
        {
            "src": "images/screenshot-extra-1.png",
            "sizes": "1080x1920",
            "type": "image/png",
            "form_factor": "narrow"
        },
        {
            "src": "images/screenshot-extra-2.png",
            "sizes": "1080x1920",
            "type": "image/png",
            "form_factor": "narrow"
        },
        {
            "src": "images/screenshot-extra-3.png",
            "sizes": "1080x1920",
            "type": "image/png",
            "form_factor": "narrow"
        }
    ],
    "shortcuts": [
        {
            "name": "Load URL",
            "short_name": "URL",
            "description": "Load audio from a URL",
            "url": "/?action=load_url",
            "icons": [
                {
                    "src": "favicon.png",
                    "sizes": "512x512",
                    "type": "image/png"
                }
            ]
        }
    ],
    "file_handlers": [
        {
            "action": "/",
            "accept": {
                "audio/mpeg": [
                    ".mp3"
                ],
                "audio/flac": [
                    ".flac"
                ],
                "audio/wav": [
                    ".wav"
                ],
                "audio/ogg": [
                    ".ogg"
                ]
            }
        }
    ],
    "categories": [
        "music",
        "multimedia",
        "entertainment"
    ],
    "share_target": {
        "action": "/",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "name",
            "text": "description",
            "url": "link",
            "files": [
                {
                    "name": "file",
                    "accept": [
                        "audio/*"
                    ]
                }
            ]
        }
    },
    "protocol_handlers": [
        {
            "protocol": "web+vinyl",
            "url": "/?url=%s"
        }
    ],
    "launch_handler": {
        "client_mode": "navigate-existing"
    },
    "display_override": [
        "window-controls-overlay",
        "standalone"
    ]
}